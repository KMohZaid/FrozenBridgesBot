# ============================================
# Telegram Bot Credentials
# ============================================
# Your bot token from @BotFather
BOT_TOKEN=your_bot_token_here

# Your Telegram user ID (used for admin commands)
OWNER_ID=your_user_id_here

# Telegram API credentials from https://my.telegram.org
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# ============================================
# PostgreSQL Database Credentials
# ============================================
# Database name for storing game data
POSTGRES_DB=frozen_bridges

# Database username
POSTGRES_USER=user

# Database password
POSTGRES_PASSWORD=password

# Database host (use 'postgres' for Docker, 'localhost' for local)
DB_HOST=postgres

# Database port (default PostgreSQL port)
DB_PORT=5432

# ============================================
# Game Configuration
# ============================================
# Secret key used for dice rolling inline queries (prevents spoofing)
DICE_INLINE_DISPLAY_KEY=WAIFU_CUTE_DICE_ROLLER

# Maximum times an answerer can request a question change (default: 3)
MAX_QUESTION_CHANGE_REQUESTS=3

# Enable taunt/comedy messages during dice rolls and reveals (true/false)
ENABLE_TAUNT_MESSAGES=true

# ============================================
# Timer Configuration (in seconds)
# ============================================
# Time players have to ask a question (default: 300 = 5 minutes)
ASKING_TIMEOUT=300

# Time players have to answer a question (default: 300 = 5 minutes)
ANSWERING_TIMEOUT=300

# Time players have to roll the dice (default: 60 = 1 minute)
DICE_ROLL_TIMEOUT=60

# Time questioner has to accept/reject answer and rate difficulty (default: 120 = 2 minutes)
ACCEPT_REJECT_TIMEOUT=120

# Time for votes to complete (default: 30 = 30 seconds)
VOTE_TIMEOUT=30

# ============================================
# Maximum Timer Limits (in seconds)
# ============================================
# Maximum time allowed for asking phase (default: 1800 = 30 minutes)
MAX_ASKING_TIMEOUT=1800

# Maximum time allowed for answering phase (default: 600 = 10 minutes)
MAX_ANSWERING_TIMEOUT=600

# Maximum time allowed for accept/reject phase (default: 300 = 5 minutes)
MAX_ACCEPT_REJECT_TIMEOUT=300
